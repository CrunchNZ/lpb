{
  "name": "solana-liquidity-sentinel",
  "version": "1.0.0",
  "description": "Autonomous liquidity farming bot for Solana meme coins",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc && electron .",
    "dev:react": "vite",
    "build": "npm run build:react",
    "build:react": "vite build",
    "build:electron": "npm run before-build && tsc && electron-builder",
    "build:electron:mac": "npm run build:electron -- --mac",
    "build:electron:win": "npm run build:electron -- --win",
    "build:electron:linux": "npm run build:electron -- --linux",
    "build:full": "npm run build:react && npm run build:electron",
    "before-build": "node scripts/before-build.js",
    "after-build": "node scripts/after-all-artifact-build.js",
    "notarize": "node scripts/notarize.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "clean": "rm -rf dist build node_modules/.cache",
    "clean:all": "rm -rf dist build node_modules package-lock.json && npm install",
    "validate": "npm run type-check && npm run lint && npm run test",
    "prepublishOnly": "npm run validate && npm run build:full"
  },
  "keywords": [
    "solana",
    "defi",
    "liquidity",
    "bot",
    "electron"
  ],
  "author": "Solana Liquidity Sentinel Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "@jup-ag/api": "^6.0.0",
    "@reduxjs/toolkit": "^1.9.0",
    "@solana/spl-token": "^0.3.0",
    "@solana/wallet-adapter-base": "^0.9.0",
    "@solana/wallet-adapter-react": "^0.15.0",
    "@solana/wallet-adapter-react-ui": "^0.9.0",
    "@solana/wallet-adapter-wallets": "^0.19.0",
    "@solana/web3.js": "^1.87.0",
    "@types/sqlite3": "^5.1.0",
    "axios": "^1.5.0",
    "class-validator": "^0.14.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-redux": "^8.1.0",
    "react-router-dom": "^6.15.0",
    "react-slider": "^2.0.0",
    "recharts": "^2.8.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.0",
    "twitter-api-v2": "^1.15.0",
    "vader-sentiment": "^1.1.3",
    "ws": "^8.14.0"
  },
  "build": {
    "appId": "com.solanaliquiditysentinel.app",
    "productName": "Solana Liquidity Sentinel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
