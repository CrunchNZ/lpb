{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": [
    "src/main.ts",
    "src/preload.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "tests",
    "src/frontend",
    "src/backend"
  ]
}